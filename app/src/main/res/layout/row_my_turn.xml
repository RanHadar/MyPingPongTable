<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/header_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_bg"
        android:backgroundTint="#FCFCFC"
        android:padding="12dp">


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imgViewTurn1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:tint="@color/primary_blue"
            android:rotation="10"
            android:background="@drawable/giphy"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txtViewTime1"
            android:layout_width='wrap_content'
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="18dp"
            android:layout_toEndOf="@+id/imgViewTurn1"
            android:layout_toRightOf="@+id/imgViewTurn1"
            android:text="Turn's Time:"
            android:textSize="15dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txtAgainst1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/imgViewTurn1"
            android:layout_toRightOf="@+id/imgViewTurn1"
            android:text="Your turn is against:"
            android:textSize="13sp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            >

            <ImageView
                android:id="@+id/deleteImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:foregroundTint="#00791515"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/ic_delete_foreground"
                android:tint="#c4c4c4" />

            <ImageView
                android:id="@+id/shareImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="1.2"
                android:scaleX="1.2"
                android:layout_centerVertical="true"
                android:tint="#c4c4c4"
                android:src="@drawable/ic_share_foreground" />



        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>